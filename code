finalgrade = 0

#calculate the entire grade for the student
print("Your final grade is:")
w = (z*0.6)+(y*0.3)+(y*0.1)
print w

grade = [ 'A', 'B', 'C', 'D', 'F' ] #array of letter grades

if w <= 100 and w > 89:
	print(grade[0])
if w <= 89 and w > 79:
	print(grade[1])
if w <= 79 and w > 69:
	print(grade[2])
if w <= 69 and w > 64:
	print(grade[3])
if w <= 64:
	print(grade[4])


